---

<Layout title="Welcome to Astro.">
	<main>
		<ul class="tree">
			<li>
				<details open>
					<summary>page</summary>
					<ul>
						<li>
							<details open>
								<summary>page-child1</summary>
								<ul>
									<li>
										<details open>
											<summary>child1-content</summary>
											<ul>
												<li>
													<p>content</p>
												</li>
												<li>
													<p>content2</p>
												</li>
											</ul>
