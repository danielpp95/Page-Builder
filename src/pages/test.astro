</Layout>

<style>
	main {
		margin: 0;
		padding: 0;
		/* width: 800px; */
		/* max-width: calc(100% - 2rem); */
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	:root {
		--vertical-line-left: -2.15em;
		--horizontal-line-width: 1.75em;
		--circle-size: 1em;
		--ul-padding: 1.5em;
		--line-height: 2em;
		--circle-left: -1.12em;
	}

	p {
		margin: 0;
	}

	ul {
		list-style: none;
		line-height: var(--line-height);
		padding-left: var(--ul-padding);
	}

	ul summary {
		cursor: pointer;
	}

	ul summary::marker {
		display: none;
		content: '';
	}

	ul li {
		position: relative;
		/* outline: 1px solid green; */
	}

	ul li::before {
		position: absolute;
		left: var(--vertical-line-left);
		top: -1em;
		border-left: 2px solid lightgray;
		border-bottom: 2px solid lightgray;
		content: '';
		width: var(--horizontal-line-width);
		height: 2em;
	}

	ul li::after {
		position: absolute;
		left: var(--vertical-line-left);
		bottom: 0px;
		border-left: 2px solid lightgray;
		content: '';
		width: var(--horizontal-line-width);
		height: 100%;
	}

	ul li:last-child::after {
		display: none;
	}

	/* ul.tree > li::after, */
	ul.tree > li::before {
		display: none;
	}

	ul summary::before {
		position: absolute;
		content: '+';
		background: rgb(113, 150, 113);
		display: block;
		width: var(--circle-size);
		height: var(--circle-size);
		line-height: 0.9em;
		text-align: center;
		top: 0.5em;
		left: var(--circle-left);
		z-index: 1;
		border-radius: 50em;
	}

	ul details[open] > summary::before {
		content: '-';
	}

</style>
